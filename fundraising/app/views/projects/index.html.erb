<h1><%= pluralize(@projects.size, 'Active Project') %></h1>

<% @projects.each do |project| %>
  <article class="index-listing">
    <header>
      <div class="index-thumbnail">
         <%= image_for(project) %>
      </div> <!-- index-thumbnail -->
      <h2><%= link_to project.name, project %></h2>
    </header>
    <table>
      <tr>
        <th>Target Pledge Amount:</th>
        <td><%= number_to_currency(project.target_pledge_amount) %></td>
      </tr>
      <tr>
        <th>End Date:</th>
        <td><%= date_status(project) %><br>
        <%= project.pledging_ends_on %></td>
      </tr>
    </table>
    <p>
      <%= truncate(project.description, length: 50, separator: ' ') %> <%= link_to "read more", project %>
    </p>
  </article>
<% end %>