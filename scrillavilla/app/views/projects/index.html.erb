<p id="notice"><%= notice %></p>

<h1>Listing Projects</h1>


<div class="row"> 
<% @projects.each do |project| %>
<div class="col-md-3">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title"><%= project.name %></h3>
      <p style="text-align: right; margin-top: -16px;"><%= number_to_currency(project.target_pledge_amount) %></p>
    </div><!-- heading-->
    <div class="panel-body">
      <p><%= project.description %></p>
      <p> <%= project.website %></p>
      <p><%= project.pledging_ends_on %></p>
    </div><!-- body-->
    <div class="panel-footer">
      <p style="text-align: right;"><%= link_to 'Show', project, class: "btn btn-sm btn-primary" %>
        <%= link_to 'Edit', edit_project_path(project), class: "btn btn-sm btn-info" %>
        <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %></p>
    </div>
  </div><!-- panel-->
</div> <!-- col-md-3 -->
<% end %> <!--each do-->

</div>  <!-- row-->



<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Target Pledge Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td><%= number_to_currency(project.target_pledge_amount) %></td>
        <td><%= link_to 'Show', project, class: "btn btn-sm btn-primary" %></td>
        <td><%= link_to 'Edit', edit_project_path(project), class: "btn btn-sm btn-info" %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path, class: "btn btn-sm btn-success" %>
