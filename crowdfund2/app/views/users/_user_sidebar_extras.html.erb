  <div class="row">
    <% if @followed_projects.any? %>
      <h3><%= pluralize(@followed_projects.size, "Followed Project") %></h3>
        <% @followed_projects.order("created_at DESC").each do |project| %>
          <div class="follow">
            <%= link_to image_tag(project.image_file_name), project %>
          </div> <!-- follow -->
        <% end %> <!-- each -->
    <% end %> <!-- if favorites? -->
  </div> <!-- row -->
