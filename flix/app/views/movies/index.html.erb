<h1>Movies</h1>
<h3>Now showing <%= pluralize(@movies.size, "Movie") %> </h3>

<% @movies.each do |movie| %>
  <article>
    <header>
      <h2><%= movie.title %></h2>
    </header>
      <p><%= truncate(movie.description, length: 25, separator: " ") %></p>
    <table>
      <tr>
        <th>Released:</th>
        <td><%= movie.released_on.to_s(:long) %></td>
      </tr>
      <tr>
        <th>Rating:</th>
        <td><%= movie.rating %></td>
      </tr>
      <tr>
        <th>Total Gross:</th>
        <td><% format_gross(movie) %> / 
        <%= number_to_currency(movie.total_gross) %></td>
      </tr>
    </table>
  </article>
<% end %>