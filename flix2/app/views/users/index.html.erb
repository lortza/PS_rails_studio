<% content_for(:title, "All Users") %>

<header id="content-header">
  <h1><%= pluralize(@users.size, 'User') %></h1>
</header>

<ul id="users", class="index-image">
  <% @users.each do |user| %>
    <li>
    <%= profile_image_for(user) %> <%= link_to user.name, user %> (<%= user.email %>) 
      <% if user.admin? %>
       (Admin) 
      <% end %> 
      <%= link_to "Show", user_path(user), class: "button" %>  
      <%= link_to "Delete", user, method: :delete, data: { confirm: 'Are you sure you want to delete?' }, class: "button" %>
    </li>
  <% end %>
</ul>
    