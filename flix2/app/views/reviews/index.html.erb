<header id="content-header">
  <h1>Reviews for <%= link_to(@movie.title, @movie) %></h2>
</header>

  <% if @reviews.any? %>
    <ol id="reviews">
      <% @reviews.order("created_at DESC").each do |review| %>
        <%= render :partial => "reviews/review", :object => review %>
      <% end %><!-- each do -->
    </ol>
  <% end %> <!-- if any? -->

  <footer>
    <nav>
    <%= link_to "Write Review", new_movie_review_path(@movie), 
                class: 'button' %> 
    <%= link_to "Back", @movie, class: "button" %>
    </nav>
  </footer>