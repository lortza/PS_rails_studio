<%= form_for(@genre) do |f| %> 
<%= render "shared/errors", object: @genre %>
  <fieldset>
    <ol>
      <li class="required">
        <%= f.label :name %>
        <%= f.text_field :name, size: 40, autofocus: true %>
      </li> 
    </ol>
    <p>
      <%= f.submit %>  <%= link_to "Cancel", genres_path, class: "button" %>
    </p>
  </fieldset>
<% end %> <!-- form_for @genre -->