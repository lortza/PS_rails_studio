  <article class="show-listing">
    <header>
      <div class="show-image">
         <%= image_for(@project) %>
      </div> <!-- index-thumbnail -->
      
      <h2><%= @project.name %></h2>
    </header>
    <p>
      <%= @project.description %>
    </p>
    <table>
      <tr>
        <th>Target Pledge Amount:</th>
        <td><%= number_to_currency(@project.target_pledge_amount) %></td>
      </tr>
      <tr>
        <th>Team Members:</th>
        <td><%= @project.team_members %></td>
      </tr>
      <tr>
        <th>Pledging ends on:</th>
        <td><%= date_status(@project) %><br>
        <%= @project.pledging_ends_on %></td>
      </tr>
      <tr>
        <th>Website:</th>
        <td><%= @project.website %></td>
      </tr>
    </table>
  </article>

<%= link_to "Back", projects_path %> | 
<%= link_to "Edit", edit_project_path(@project) %> | 
<%= link_to "Delete", project_path(@project), method: :delete, data: {confirm: "Are you sure you want to delete this project???"} %>

