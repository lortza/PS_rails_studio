<ul id="events">
  <% @events.each do |event| %>
    <li>
      <article class="event">
        <header>
          <%= link_to image_for(event), event %>
          <h2><%= link_to(event.name, event) %></h2>
          <h3><%= pluralize(event.capacity, 'spot') %></h3>
        </header>
        <p>
          <%= truncate(event.description, length: 150, separator: ' ') %>
        </p>
        <table>
          <tr>
            <th>When</th>
            <td><%= event.starts_at %></td>
          </tr>
          <tr>
            <th>Where</th>
            <td><%= event.location %></td>
          </tr>
          <tr>
            <th>Price</th>
            <td><%= format_price(event) %></td>
          </tr>
        </table>
        <%= link_to 'Edit', edit_event_path(event), class: 'button' %>
      </article>
    </li>
  <% end %>
</ul>
